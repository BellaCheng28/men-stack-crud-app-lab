<body>
  <!-- update the header -->
  <h1>Edit <%= food.name %></h1>
  <form action="/food/<%=food._id%>?_method=PUT" method="POST">
    <div>
    <label for="name">Name:</label>
    <input type="text" name="name" value="<%=food.name %>" />
    </div>
   <div>
     <span>Do you like this food?</span>   
    <input type="radio" name="like"  value="true" id="like" 
    checked> 
    <label for="like">Yes</label>
    <input type="radio" name="like"    value="false" id="dislike"> 
    <label for="dislike">No</label>
    </div>
    <!-- update the button text -->
    <button type="submit">Update Food</button>
  </form>
  <a href="/food">Back to Food</a>
</body>
